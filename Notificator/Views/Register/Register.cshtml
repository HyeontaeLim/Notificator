@{
    ViewBag.Title = "회원가입";
    Layout = "_Layout";
}

<div class="flex justify-center items-center h-full">
    <div class="w-80">
        <form action="/register" method="post">
            <div class="flex justify-between">
                <label for="userId">아이디</label>
                <input id="userId" name="UserId" type="text" class="border-2 rounded-lg border-gray">
            </div>
            <div class="h-1"></div>
            <div class="flex-1 flex justify-between">
                <label for="password">비밀번호</label>
                <input id="password" name="Password" type="password" class="border-2 rounded-lg border-gray">
            </div>
            <div class="h-1"></div>
            <div class="flex-1 flex justify-between">
                <label for="password-confirm">비밀번호 확인</label>
                <input id="password-confirm" name="PasswordCfm" type="password" class="border-2 rounded-lg border-gray">
            </div>
            <div class="h-1"></div>
            <div class="flex justify-between">
                <label for="name">이름</label>
                <input id="name" name="Name" type="text" class="border-2 rounded-lg border-gray">
            </div>
            <div class="h-1"></div>
            <div class="flex justify-between">
                <label for="email">이메일</label>
                <input id="email" name="Email" type="email" class="border-2 rounded-lg border-gray">
            </div>
            <div class="h-1"></div>
            <div class="flex justify-between">
                <label for="discordWebhookUrl">디스코드 웹훅 URL</label>
                <input id="discordWebhookUrl" name="DiscordWebhookUrl" type="text"
                    class="border-2 rounded-lg border-gray">
            </div>
            <div class="h-1"></div>
            <input type="submit"
                class="flex-1 bg-blue-500 hover:bg-blue-700 text-white font-bold px-4 rounded w-full py-1" value="회원가입">
        </form>
        <div class="h-1"></div>
    </div>
</div>